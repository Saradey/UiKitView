<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llcContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <com.saradey.studio.circlechart.CircleChartView
            android:id="@+id/crcExample1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="16dp"
            app:arcPieMode="stroke"
            app:arcPieSpacePixels="3dp"
            app:arcPieStrokeSize="20dp" />

        <com.saradey.studio.circlechart.CircleChartView
            android:id="@+id/crcExample2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="16dp" />

        <com.saradey.studio.circlechart.CircleChartView
            android:id="@+id/crcExample3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="16dp"
            app:arcPieMode="stroke"
            app:arcPieSpacePixels="5dp"
            app:arcPieStrokeSize="40dp" />

        <com.saradey.studio.circlechart.CircleChartView
            android:id="@+id/crcExample4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:arcPieMode="stroke"
            app:arcPieSpacePixels="3dp"
            app:arcPieStrokeSize="10dp" />

        <com.saradey.studio.circlechart.CircleChartView
            android:id="@+id/crcExample5"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_margin="16dp"
            app:arcPieMode="stroke"
            app:arcPieSpacePixels="3dp"
            app:arcPieStrokeSize="10dp" />

        <com.saradey.studio.circlechart.CircleChartView
            android:id="@+id/crcExample6"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_margin="16dp"
            app:arcPieMode="stroke"
            app:arcPieSpacePixels="3dp"
            app:arcPieStrokeSize="10dp" />

        <com.saradey.studio.circlechart.CircleChartView
            android:id="@+id/crcExample7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:arcPieMode="fill" />

        <com.saradey.studio.circlechart.CircleChartView
            android:id="@+id/crcExample8"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="16dp"
            app:arcPieMode="fill" />

        <com.saradey.studio.circlechart.CircleChartView
            android:id="@+id/crcExample9"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="16dp"
            app:arcPieMode="fill"
            app:arcPieSpacePixels="3dp" />

        <com.saradey.studio.circlechart.CircleChartView
            android:id="@+id/crcExample10"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="16dp"
            app:arcPieElevation="true"
            app:arcPieMode="stroke"
            app:arcPieSpacePixels="3dp"
            app:arcPieStrokeSize="30dp" />

        <com.saradey.studio.circlechart.CircleChartView
            android:id="@+id/crcExample11"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="16dp"
            app:arcPieElevation="true"
            app:arcPieMode="fill"
            app:arcPieSpacePixels="3dp" />

        <com.saradey.studio.circlechart.CircleChartView
            android:id="@+id/crcExample12"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="16dp"
            app:arcPieElevation="true"
            app:arcPieMode="fill" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.core.widget.NestedScrollView>